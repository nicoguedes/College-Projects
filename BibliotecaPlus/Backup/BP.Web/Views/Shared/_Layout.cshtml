@using BP.Resources
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/themes/smoothness/jquery-ui-1.8.24.custom.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/header_menu.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
</head>
<body>
    <div id="content">
        <div id="header">
            <div id="title">
                <table width="100%">
                    <tr>
                        <td>
                            <h1>
                                Biblioteca Plus</h1>
                        </td>
                        <td align="center">
                        @Html.Partial("~/Views/Shared/SelecaoIdioma.cshtml")
                        </td>
                        <td align="right" valign="top" style="padding-right: 20px;">
                            <span>@string.Format(Resources.MenuPrincipal_BoasVindas, BP.Web.Models.UsuarioLogado.Usuario.Nome) |
                                @Html.ActionLink(@Resources.Carrinho_MeuCarrinho, "Index", new { controller = "Carrinho", area = "" })
                                | <a href="@Url.Action("Index", "Emprestimo", new { area = "" })">
                                    @Resources.MenuPrincipal_Emprestimos</a> | <a href='@Url.Action("Logoff", "Login", new { area = "" })'>
                                        @Resources.MenuPrincipal_Sair
                                    </a></span>
                            <br />
                            @if (BP.Web.Models.UsuarioLogado.IsUsuarioLogado && (BP.Web.Models.UsuarioLogado.Usuario.Roles ?? "").Contains("Administrador"))
                            { 
                                @Html.ActionLink(@Resources.Admin_AreaAdministrador, "Index", new { controller = "Home", area = "Admin"})
                            }
                            
                        </td>
                    </tr>
                </table>
            </div>
            <div id="headermenu">
                <ul>
                    <li id="menuInicio"><a href="@Url.Action("Index", "Home", new { area = "" })"><span>
                        @Resources.MenuPrincipal_HomePage</span></a></li>
                    <li><a href="@Url.Action("Index", "Livros", new { area = "", genero = (int)Generos.Terror })">
                        <span>@Resources.MenuPrincipal_Terror</span></a></li>
                    <li><a href="@Url.Action("Index", "Livros", new { area = "", genero = (int)Generos.Romance })">
                        <span>@Resources.MenuPrincipal_Romance</span></a></li>
                    <li><a href="@Url.Action("Index", "Livros", new { area = "", genero = (int)Generos.Classico })">
                        <span>@Resources.MenuPrincipal_Classico</span></a></li>
                    <li><a href="@Url.Action("Index", "Livros", new { area = "", genero = (int)Generos.Drama })">
                        <span>@Resources.MenuPrincipal_Drama</span></a></li>
                        <li><a href="@Url.Action("Index", "Livros", new { area = "", genero = (int)Generos.Outro })">
                        <span>@Resources.MenuPrincipal_Outros</span></a></li>
                </ul>
            </div>
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>
</body>
</html>
