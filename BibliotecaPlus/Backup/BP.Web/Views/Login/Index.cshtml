@model Dominio.Usuario
@using BP.Resources
@{
    Layout = null;
    
}
<!DOCTYPE html>
<html>
<head>
    <title>Biblioteca Plus - Login</title>
    <link href="@Url.Content("~/Content/themes/smoothness/jquery-ui-1.8.24.custom.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#login_div").dialog({
                closeOnEscape: false,
                open: function (event, ui) { $(".ui-icon-closethick").hide(); }
            });
        });
    </script>
</head>
<body>
    <div id="selecaoIdioma" style="text-align: center">
        @Html.Partial("~/Views/Shared/SelecaoIdioma.cshtml")
    </div>
    <div id="login_div" title="@Resources.Login_EntrarNoSistema">
        @using (@Html.BeginForm("EfetuarLogin", "Login", new { area = "" }, FormMethod.Post))
        {
            <p>
                <span>@Resources.Login_Usuario </span>
                @Html.TextBoxFor(m => m.Login)
            </p>
            <p>
                <span>@Resources.Login_Senha </span>
                @Html.PasswordFor(m => m.Senha)
            </p>
            <p>
                <a href="@Url.Action("EsqueciMinhaSenha", "Login", new { area = "" })">@Resources.Login_EsqueciMinhaSenha</a>
                | <a href="@Url.Action("Cadastrar", "Login", new { area = "" })">@Resources.Login_Cadastrar</a>
            </p>
            <input type="submit" value="@Resources.Login_Entrar" />
        }
    </div>
</body>
</html>
