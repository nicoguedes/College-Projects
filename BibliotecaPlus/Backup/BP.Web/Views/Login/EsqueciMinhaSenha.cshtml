@using BP.Resources
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>BibliotecaPlus - @Resources.Login_EsqueciMinhaSenha</title>
    <link href="@Url.Content("~/Content/themes/smoothness/jquery-ui-1.8.24.custom.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#dv_recup_senha").dialog({
                closeOnEscape: false,
                open: function (event, ui) { $(".ui-icon-closethick").hide(); }
            });
        });   
    </script>
</head>
<body>
    <div id="selecaoIdioma" style="text-align: center">
        @Html.Partial("~/Views/Shared/SelecaoIdioma.cshtml")
    </div>
    <div id="dv_recup_senha" title="@Resources.Login_EsqueciMinhaSenha">
        @using (Html.BeginForm())
        {
            <p>
                Login:
                <input id="Login" name="Login" type="text" />
            </p>
            <p>
                <input type="submit" value="@Resources.EsqueciMinhaSenha_EnviarMinhaSenha" />
            </p>
            <p>
                @ViewBag.Mensagem
            </p>
            <p>
                @Html.ActionLink(@Resources.Login_VoltarPaginaInicial, "Index", new { controller = "Home", area = "" })
            </p>
        }
    </div>
</body>
</html>
