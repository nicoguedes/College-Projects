@model Dominio.Usuario
@using BP.Resources
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Biblioteca Plus - @Resources.CadastrarUsuario_Titulo</title>
    <link href="@Url.Content("~/Content/themes/smoothness/jquery-ui-1.8.24.custom.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
</head>
<body>
    <div id="selecaoIdioma" style="text-align: center">
        @Html.Partial("~/Views/Shared/SelecaoIdioma.cshtml")
    </div>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <fieldset>
            <legend>@Resources.CadastrarUsuario_Titulo</legend>
            <table width="100%">
                <tr align="center">
                    <td>
                        <div class="editor-label">
                            Login
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Login)
                            @Html.ValidationMessageFor(model => model.Login)
                        </div>
                        <div class="editor-label">
                            @Resources.CRUD_Usuario_Senha
                        </div>
                        <div class="editor-field">
                            @Html.PasswordFor(model => model.Senha)
                            @Html.ValidationMessageFor(model => model.Senha)
                        </div>
                        <div class="editor-label">
                            @Resources.CRUD_Usuario_Nome
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Nome)
                            @Html.ValidationMessageFor(model => model.Nome)
                        </div>
                        <div class="editor-label">
                            E-mail
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Email)
                            @Html.ValidationMessageFor(model => model.Email)
                        </div>
                        <div class="editor-label">
                            CPF
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Cpf)
                            @Html.ValidationMessageFor(model => model.Cpf)
                        </div>
                        <div class="editor-label">
                            @Resources.CRUD_Usuario_DataNascimento
                        </div>
                        <div class="editor-field">
                            @Html.TextBoxFor(model => model.DataNascimento)
                            @Html.ValidationMessageFor(model => model.DataNascimento)
                        </div>
                    </td>
                    <td>
                        <div class="editor-label">
                            DDD / @Resources.CRUD_Usuario_Telefone
                        </div>
                        <div class="editor-field">
                            <input type="text" id="Ddd" name="Ddd" maxlength="2" style="width: 30px" />
                            
                            @Html.ValidationMessageFor(model => model.Ddd)

                            @Html.EditorFor(model => model.NumeroTelefone)
                            @Html.ValidationMessageFor(model => model.NumeroTelefone)
                        </div>
                        <div class="editor-label">
                            @Resources.CRUD_Usuario_CEP
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Cep)
                            @Html.ValidationMessageFor(model => model.Cep)
                        </div>
                        <div class="editor-label">
                            @Resources.CRUD_Usuario_Logradouro
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Logradouro)
                            @Html.ValidationMessageFor(model => model.Logradouro)
                        </div>
                        <div class="editor-label">
                            @Resources.CRUD_Usuario_NumeroEndereco
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.NumeroEndereco)
                            @Html.ValidationMessageFor(model => model.NumeroEndereco)
                        </div>
                        <div class="editor-label">
                            @Resources.CRUD_Usuario_Bairro
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Bairro)
                            @Html.ValidationMessageFor(model => model.Bairro)
                        </div>
                        <div class="editor-label">
                            @Resources.CRUD_Usuario_Cidade
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Cidade)
                            @Html.ValidationMessageFor(model => model.Cidade)
                        </div>
                        <div class="editor-label">
                            @Resources.CRUD_Usuario_Estado
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Estado)
                            @Html.ValidationMessageFor(model => model.Estado)
                        </div>
                    </td>
                </tr>
                <tr>
                <td colspan="2" align="center">
                 <input type="submit" value="@Resources.Btn_Confirmar" />
                </td>
                </tr>
            </table>
        </fieldset>
    }
</body>
</html>
