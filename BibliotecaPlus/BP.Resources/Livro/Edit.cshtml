@model Dominio.Livro
@using BP.Resources
@{
    string tituloPagina = null;
    int codigo = 0;
    if (Model == null)
    {
        tituloPagina = @Resources.Admin_Livro_CadastrarNovoLivro;

    }
    else
    {
        codigo = Model.CodLivro;
        tituloPagina = string.Format(@Resources.Admin_Livro_EditarLivro, Model.Titulo);
    }

    ViewBag.Title = tituloPagina;
}
<h2>
    @tituloPagina</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>@Resources.Admin_Livro_DadosLivro</legend>
        <input type="hidden" id="CodLivro" name="CodLivro" value="@codigo" />
        <div class="editor-label">
            @Resources.Admin_CRUD_Livro_TituloLivro
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Titulo)
            @Html.ValidationMessageFor(model => model.Titulo)
        </div>
        <div class="editor-label">
            @Resources.Admin_CRUD_Livro_Genero
        </div>
        <div class="editor-field">
            <select id="Genero" name="Genero">
                <option value="@((int)Generos.Classico)">@Resources.MenuPrincipal_Classico</option>
                <option value="@((int)Generos.Drama)">@Resources.MenuPrincipal_Drama</option>
                <option value="@((int)Generos.Romance)">@Resources.MenuPrincipal_Romance</option>
                <option value="@((int)Generos.Terror)">@Resources.MenuPrincipal_Terror</option>
                <option value="@((int)Generos.Outro)">@Resources.MenuPrincipal_Outros</option>
            </select>
        </div>
        <div class="editor-label">
            @Resources.Admin_CRUD_Livro_Autor
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Autor)
            @Html.ValidationMessageFor(model => model.Autor)
        </div>
        <div class="editor-label">
            @Resources.Admin_CRUD_Livro_Sinopse
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Sinopse, 10, 50, null)
            @Html.ValidationMessageFor(model => model.Sinopse)
        </div>
        <div class="editor-label">
            @Resources.Admin_CRUD_Livro_QuantidadeDisponivel
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.QuantidadeDisponivel)
            @Html.ValidationMessageFor(model => model.QuantidadeDisponivel)
        </div>
        <div class="editor-label">
            @Resources.Admin_CRUD_Livro_ValorDia
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ValorDia)
            @Html.ValidationMessageFor(model => model.ValorDia)
        </div>
        <p>
            <input type="submit" value="@Resources.Btn_Salvar" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink(@Resources.Link_VoltarParaLista, "Index")
</div>
