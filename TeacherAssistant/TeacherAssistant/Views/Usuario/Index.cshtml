@model IEnumerable<TeacherAssistant.Models.Usuario>
@{
    ViewBag.Title = "Usuários";
}
<p>
    @Html.ActionLink("Novo Usuário", "Create", null, new { data_role = "button", data_icon = "plus" })
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Login)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Matricula)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Matricula)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { data_rel = "dialog" }) |
                @Html.ActionLink("Enviar Mensagem", "Enviar", "Mensagem", new { id = item.Id }, null)
            </td>
        </tr>
    }
</table>
