@model TeacherAssistant.Models.Questionario
@{
    ViewBag.Title = "Editar Questionário " + Model.Titulo;
}
@section Header {
    @Html.ActionLink("Voltar", "Index", "Questionario", null, new { data_icon = "arrow-l", data_rel = "back" })
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval", "~/Scripts/pages/questionario.js")
}
@using (Html.BeginForm())
{
    @Html.ValidationSummary()

    @Html.HiddenFor(model => model.Id)
    
    <ul data-role="listview" data-inset="true">
        <li data-role="list-divider">Detalhes</li>
        <li data-role="fieldcontain">
            @Html.LabelFor(model => model.Titulo)
            @Html.EditorFor(model => model.Titulo)
        </li>
        <li data-role="fieldcontain">
            @Html.LabelFor(model => model.ErrosPermitidos)
            @Html.EditorFor(model => model.ErrosPermitidos)
        </li>
        <li data-role="fieldcontain">
            @Html.LabelFor(model => model.QuantidadeQuestoes)
            @Html.EditorFor(model => model.QuantidadeQuestoes)
        </li>
        <li data-role="fieldcontain">
            <input type="submit" value="Salvar" />
        </li>
    </ul>
}