@model IEnumerable<TeacherAssistant.Models.Questionario>

@{
    ViewBag.Title = "Questionários";
}

<p>
    @Html.ActionLink("Incluir Questionário", "Create", null, new { data_role = "button", data_icon = "plus" })
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ErrosPermitidos)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ErrosPermitidos)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { data_rel = "dialog" }) |
            @Html.ActionLink("Questões", "Questoes", new { id = item.Id })
            </td>
        </tr>
    }

</table>
